<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CensistaTipoInfoClienteLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgbtnTipoInfoRegistrarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/registrar_cliente" />

        <ImageView
            android:id="@+id/imgbtnTipoInfoPuntearCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/puntear_cliente" />

        <ImageView
            android:id="@+id/ibCenTipInfClieRelevamiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/relevar_cliente" />

    </LinearLayout>

</LinearLayout>
