<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCensistaUnificacionClienteSeleccionDia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="60dp"
		android:gravity="center_horizontal">

		<RadioGroup
			android:id="@+id/rgAccion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<RadioButton
				android:id="@+id/rbtCensistaUnificacionClienteObtenerClientes"
				style="@style/Etiqueta"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:checked="true"
				android:text="Obtener clientes" />

			<RadioButton
				android:id="@+id/rbtCensistaUnificacionClienteVerMapa"
				style="@style/Etiqueta"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ver mapa" />

		</RadioGroup>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center_horizontal">

		<TextView
			android:id="@+id/tvCensistaUnificacionClienteTitulo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Elija el día en el cual desea trabajar:"
			android:textAppearance="@style/Contenido" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">

		<TextView
			android:id="@+id/tvCensistaUnificacionClienteDia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:text="Día:"
			android:textAppearance="@style/Etiqueta" />

		<Spinner
			android:id="@+id/spnCensistaUnificacionClienteDia"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="50dp"
			android:layout_weight="1"
			android:background="@color/colorWhite" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">

		<Button
			android:id="@+id/btnCencistaUnificacionClienteSeleccionDia"
			style="@style/Boton"
			android:layout_width="fill_parent"
			android:layout_height="35dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:text="Obtener clientes" />
	</LinearLayout>

</LinearLayout>