<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/llPreventaDevolucion"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="${relativePackage}.${activityClass}" >

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="60dp">

				<RadioGroup
					android:id="@+id/rgAccion"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<RadioButton
						android:id="@+id/rbtPreventaProductoCambioRegistrar"
						style="@style/Etiqueta"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:checked="true"
						android:text="Registrar cambio" />

					<RadioButton
						android:id="@+id/rbtPreventaProductoCambioNoRegistrar"
						style="@style/Etiqueta"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="No registrar cambio" />
				</RadioGroup>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvPreventaDevolucionClienteTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Cliente:"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvPreventaDevolucionCliente"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:textAppearance="@style/Contenido" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvDistribuidorVentaProductoCambio"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Proveedor:"
					android:textAppearance="@style/Etiqueta" />

				<Spinner
					android:id="@+id/spnPreventaDevolucionProveedor"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:layout_weight="1"
					android:background="@color/colorWhite" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvCensoUnificacionClienteLatitudTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="CategorÃ­a:"
					android:textAppearance="@style/Etiqueta" />

				<Spinner
					android:id="@+id/spnPreventaDevolucionCategoria"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:layout_weight="1"
					android:background="@color/colorWhite" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvMapaUnificacionClienteClienteCenso"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Producto:"
					android:textAppearance="@style/Etiqueta" />

				<Spinner
					android:id="@+id/spnPreventaDevolucionProducto"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:layout_weight="1"
					android:background="@color/colorWhite" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<Button
					android:id="@+id/btnPreventaDevolucionMostrarDetalles"
					style="@style/Boton"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:text="Mostrar detalles producto" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvPreventaDevolucionProductoTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Producto:"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvPreventaDevolucionProducto"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:textAppearance="@style/Contenido" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvPreventaDevolucionPrecioUnitarioTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Precio Unitario:"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvPreventaDevolucionPrecioUnitario"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:maxWidth="80dp"
					android:minWidth="80dp"
					android:textAppearance="@style/Contenido"
					android:width="80dp" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/tvPreventaDevolucionMotivoTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Motivo cambio:"
					android:textAppearance="@style/Etiqueta" />

				<Spinner
					android:id="@+id/spnPreventaDevolucionMotivo"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="10dp"
					android:background="@color/colorWhite" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvPreventaDevolucionCantidadUnitariaTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="Cantidad unitaria:"
					android:textAppearance="@style/Etiqueta" />

				<EditText
					android:id="@+id/etPreventaDevolucionCantidadUnitaria"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:background="#FFFFFF"
					android:ems="10"
					android:inputType="number"
					android:maxWidth="50dp"
					android:minWidth="50dp"
					android:width="50dp" >

					<requestFocus />
				</EditText>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<Button
					android:id="@+id/btnPreventaDevolucionAdicionarProducto"
					style="@style/Boton"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:text="Adicionar producto al cambio" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<TextView
					android:id="@+id/tvPreventaDevolucionProductoDevueltoTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:maxWidth="120dp"
					android:minWidth="120dp"
					android:text="Producto devuelto"
					android:textAppearance="@style/Etiqueta"
					android:width="120dp" />

				<TextView
					android:id="@+id/tvPreventaDevolucionCantidadDevueltaTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:text="Cantidad"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvPreventaProductoCambioPrecioTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:text="Precio"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvPreventaProductoCambioSubTotalTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:text="SubTotal"
					android:textAppearance="@style/Etiqueta" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp" >

				<ListView
					android:id="@+id/lvPreventaDevolucionDevoluciones"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1" >
				</ListView>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:gravity="right" >

				<TextView
					android:id="@+id/tvVendedorPreventaProductoCambioTotalTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Total:"
					android:textAppearance="@style/Etiqueta" />

				<TextView
					android:id="@+id/tvVendedorProductoCambioTotal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="50dp"
					android:text="000.00"
					android:textAppearance="@style/Contenido" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp">

				<Button
					android:id="@+id/btnPreventaDevolucionConfirmarDevolucion"
					style="@style/Boton"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:text="Confirmar cambio" />

			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>