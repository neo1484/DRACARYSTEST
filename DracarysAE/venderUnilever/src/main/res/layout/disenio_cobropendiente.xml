<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llCensistaEdicionCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvCobroPendienteCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="90dp"
            android:minWidth="90dp"
            android:text="Cliente"
            android:textAppearance="@style/Etiqueta"
            android:width="90dp" />

        <TextView
            android:id="@+id/tvCobroPendienteFechaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxWidth="66dp"
            android:minWidth="66dp"
            android:text="00/00/0000"
            android:textAppearance="@style/Etiqueta"
            android:width="66dp" />

        <TextView
            android:id="@+id/tvCobroPendienteMontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="0000.00"
            android:textAppearance="@style/Etiqueta"
            android:width="50dp" />

        <TextView
            android:id="@+id/tvCobroPendienteSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxWidth="50dp"
            android:minWidth="50dp"
            android:text="0000.00"
            android:textAppearance="@style/Etiqueta"
            android:width="50dp" />

        <TextView
            android:id="@+id/tvCobroPendienteDiasMora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxWidth="30dp"
            android:minWidth="30dp"
            android:text="00"
            android:textAppearance="@style/Etiqueta"
            android:width="30dp" />
    </LinearLayout>

</LinearLayout>
